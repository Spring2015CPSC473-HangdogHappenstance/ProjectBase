extends layout

block content
	h1= title
	form#AddProject(role="form", method="post", action="/editproject?_id=#{_id}")
		.form-group
			label Task Name
			input.form-control(type="text", placeholder="Name", name="Name")
		.form-group
			label(for="duration") Enter Description
			input.form-control#inputdescription(type="text", placeholder="Description", name="description")
		.form-group
			label(for="startdate") Enter start date
			input.form-control#inputstartdate(type="text", placeholder="start date", name="startdate")
		.form-group
			label(for="duration") Enter estimated duration
			input.form-control#inputduration(type="text", placeholder="duration", name="duration")
		.form-group
			label(for="status") Enter Status
			input.form-control#inputuserstatus(type="text", placeholder="status", name="status")
		button#btnSubmit(type="submit") submit