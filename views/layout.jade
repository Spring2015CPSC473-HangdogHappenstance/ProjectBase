doctype html
html
  head
    title= title
    script(src="http://code.jquery.com/jquery-2.0.2.js", type="text/javascript")
    script(src="/js/bootstrap.js", type="text/javascript")
    link(href="/css/bootstrap.css", rel="stylesheet")
    link(rel='stylesheet', type='text/css', href='/css/bootstrap-theme.css', media='screen')
    link(rel='stylesheet', type='text/css', href='/css/justified-nav.css', media='screen')
    link(rel='stylesheet', type='text/css', href='/css/normal.css', media='all')
    link(href='/css/style.css', rel="stylesheet")
    
  body
    block head
      header
        h1= title
        div("content"='' "class"='container')
        nav#right
          if (currentUser)
            label#thisUser User: #{currentUser.username}
            a(href='/logout').btn.btn-danger Logout
            a(href='/friend/discover').btn.btn-success Friends
            a(href='/likeStuff').btn.btn-success Like Stuff
            a(href='/mail').btn.btn-success Mail
            a(href='/viewuser?_id=#{currentUser._id}').btn.btn-success Account info
          else
            a(href='http://localhost:2200/Login').btn.btn-warning Log In
            a(href='http://localhost:2200/newuser').btn.btn-warning Register

        nav#left
          a(href='/aboutUs').btn.btn-primary About Us
          a(href='/help').btn.btn-primary Help
          if (currentUser)
            a(href='/').btn.btn-primary Hangdog Happenstance

    block content
    block footer
